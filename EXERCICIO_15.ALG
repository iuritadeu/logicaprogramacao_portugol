algoritmo "exercicio_15"

var
dias, Hpdias, Htotal: inteiro
sal: real


inicio
      Escreva ("Quantos dias você trabalha por mês: ")
      leia(dias)
      Escreva ("Quantas horas você trabalha por dia: ")
      Leia(Hpdias)
      htotal <- hpdias * dias
      Sal <- htotal * 25.00
      Escreva (" Seu salário é de R$",sal:2:2,".")


fimalgoritmo